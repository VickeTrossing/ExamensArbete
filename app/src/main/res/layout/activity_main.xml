<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/home_layout"
        android:fitsSystemWindows="true"
        android:windowLayoutInDisplayCutoutMode="shortEdges"
        android:background="@drawable/changing_background">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_main"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="44dp"
                android:text="Welcome!"
                android:textColor="#D3D3D3"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/buttonFood"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/home_page_buttons"
                android:elevation="11dp"
                android:onClick="goToBMI"
                android:padding="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/diet"
                android:text="Calculate BMI"
                android:textAllCaps="false"
                android:textColor="#D3D3D3"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonActivity"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonCal"
                app:layout_constraintVertical_bias="0.019" />

        <ImageButton
                android:id="@+id/imageButtonCal"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginStart="22dp"
                android:layout_marginTop="136dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/home_page_buttons"
                android:elevation="11dp"
                android:foregroundGravity="top"
                android:gravity="center"
                android:onClick="goToCal"
                android:padding="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/calories"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonBMI"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:src="@drawable/calories" />

        <TextView
                android:id="@+id/textView10"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="11dp"
                android:text="Your Food"
                android:textColor="#D3D3D3"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonFood"
                app:layout_constraintEnd_toEndOf="@+id/buttonFood"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="@+id/buttonFood" />

        <TextView
                android:id="@+id/textView7"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="11dp"
                android:text="Calculate Calories"
                android:textColor="#D3D3D3"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageButtonCal"
                app:layout_constraintEnd_toEndOf="@+id/imageButtonCal"
                app:layout_constraintStart_toStartOf="@+id/imageButtonCal" />

        <ImageButton
                android:id="@+id/buttonActivity"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/home_page_buttons"
                android:elevation="11dp"
                android:onClick="goToBMI"
                android:padding="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/barbell"
                android:text="Calculate BMI"
                android:textAllCaps="false"
                android:textColor="#D3D3D3"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonBMI"
                app:layout_constraintVertical_bias="0.019" />

        <ImageButton
                android:id="@+id/buttonBMI"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="136dp"
                android:background="@drawable/home_page_buttons"
                android:elevation="11dp"
                android:onClick="goToBMI"
                android:padding="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/scale"
                android:textAllCaps="false"
                android:textColor="#D3D3D3"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
                android:id="@+id/textView9"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="11dp"
                android:text="Your Activity"
                android:textColor="#D3D3D3"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonActivity"
                app:layout_constraintEnd_toEndOf="@+id/buttonActivity"
                app:layout_constraintStart_toStartOf="@+id/buttonActivity" />

        <TextView
                android:id="@+id/textView8"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="11dp"
                android:text="Calculate BMI"
                android:textColor="#D3D3D3"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonBMI"
                app:layout_constraintEnd_toEndOf="@+id/buttonBMI"
                app:layout_constraintStart_toStartOf="@+id/buttonBMI" />

        <ImageButton
                android:id="@+id/toBeA"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                android:background="@drawable/home_page_buttons"
                android:elevation="11dp"
                android:onClick="goToBMI"
                android:padding="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/stopwatch"
                android:textAllCaps="false"
                android:textColor="#D3D3D3"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonActivity"
                app:layout_constraintVertical_bias="0.146" />

        <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="11dp"
                android:text="Timer"
                android:textColor="#D3D3D3"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="@+id/toBeA"
                app:layout_constraintEnd_toEndOf="@+id/toBeA"
                app:layout_constraintStart_toStartOf="@+id/toBeA" />


        <ImageButton
                android:id="@+id/toBeAb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/home_page_buttons"
                android:elevation="11dp"
                android:onClick="goToBMI"
                android:padding="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/report"
                android:textAllCaps="false"
                android:textColor="#D3D3D3"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toBeA"
                app:layout_constraintTop_toBottomOf="@+id/buttonFood"
                app:layout_constraintVertical_bias="0.138" />

        <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/toBeAb"
                app:layout_constraintEnd_toEndOf="@+id/toBeAb"
                app:layout_constraintStart_toStartOf="@+id/toBeAb" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>