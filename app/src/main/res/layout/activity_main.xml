<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:fitsSystemWindows="true"
        android:background="#202539">


    <ImageButton
            android:elevation="10dp"

            android:id="@+id/buttonBMI"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/home_page_buttons"
            android:onClick="goToBMI"
            android:padding="45dp"
            android:scaleType="fitStart"
            android:src="@drawable/scale"
            android:textAllCaps="false"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    <TextView
            android:elevation="10dp"

            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Calculate BMI"
            android:textColor="#D3D3D3"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonBMI"
            app:layout_constraintEnd_toEndOf="@+id/buttonBMI"
            app:layout_constraintStart_toStartOf="@+id/buttonBMI" />


    <ImageButton
            android:elevation="10dp"

            android:id="@+id/imageButtonCal"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/home_page_buttons"
            android:foregroundGravity="top"
            android:gravity="center"
            android:onClick="goToCal"
            android:padding="45dp"
            android:scaleType="fitStart"
            android:src="@drawable/calories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            tools:src="@drawable/calories" />

    <TextView
            android:elevation="10dp"

            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Calculate Calories"
            android:textColor="#D3D3D3"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonCal"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonCal"
            app:layout_constraintStart_toStartOf="@+id/imageButtonCal" />


    <ImageButton
            android:elevation="10dp"

            android:id="@+id/buttonActivity"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/home_page_buttons"
            android:onClick="goToBMI"
            android:padding="45dp"
            android:scaleType="fitStart"
            android:src="@drawable/barbell"
            android:text="Calculate BMI"
            android:textAllCaps="false"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonBMI" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:elevation="10dp"
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="@drawable/background_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="Welcome!"
                android:textColor="#D3D3D3"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:elevation="10dp"

            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Your Activity"
            android:textColor="#D3D3D3"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonActivity"
            app:layout_constraintEnd_toEndOf="@+id/buttonActivity"
            app:layout_constraintStart_toStartOf="@+id/buttonActivity" />

    <ImageButton
            android:elevation="10dp"

            android:id="@+id/buttonFood"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/home_page_buttons"
            android:onClick="goToBMI"
            android:padding="45dp"
            android:scaleType="fitStart"
            android:src="@drawable/diet"
            android:text="Calculate BMI"
            android:textAllCaps="false"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonCal" />

    <TextView
            android:elevation="10dp"

            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Your Food"
            android:textColor="#D3D3D3"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonFood"
            app:layout_constraintEnd_toEndOf="@+id/buttonFood"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/buttonFood" />


</androidx.constraintlayout.widget.ConstraintLayout>